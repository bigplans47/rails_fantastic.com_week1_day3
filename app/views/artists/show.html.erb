<h1><%= @artist.name %></h1>
<p><%= link_to "Edit Artist", edit_artist_path(@artist) %></p>
<p><%= link_to "Return to Artists", artists_path %></p>
<p><%= link_to "Delete", artist_path(@artist),
  :data => {:confirm => "Are you sure?",
    :method => "delete"} %></p>

<% if @artist.albums.any? %>
  <ul>
    <% @artist.albums.each do |album| %>
      <li><%= album.title %> |
        <%=link_to "Edit Album", edit_artist_album_path(@artist, album) %> |
        <%=link_to "Delete", artist_album_path(@artist, album),
          :data => {:confirm => "Are you sure?", :method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No albums yet</p>
<% end %>

<p><%= link_to "Add new album", new_artist_album_path(@artist) %></p>
